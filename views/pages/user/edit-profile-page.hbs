<div class="container">

    <div class="row justify-content-center">
        
        <div class="col-md-6">
           {{#with theUser}}
            <h1>Editar Perfil</h1>
            <hr>
                
            <form action="/user/edit-profile/{{id}}" method="POST">
                <div class="form-group">
                    <label for="username">* Nombre de usuario</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{username}}">
                </div>
                <div class="form-group">
                    <label for="name">* Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="surname">* Apellido</label>
                    <input type="text" class="form-control" id="surname" name="surname" value="{{surname}}">
                </div>
                <div class="form-group">
                    <label for="address">Dirección</label>
                    <input type="text" class="form-control" id="address" name="address" value="{{address}}">
                </div>
                <div class="form-group">
                    <label for="cardNumber">Targeta de Crédito/Débito</label>
                    <input type="text" class="form-control" id="cardNumber" name="cardNumber" value="{{cardNumber}}">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Confirmar Edición</button>
                {{#if errorMessage}}
                <div id="error">
                    <p>{{{errorMessage}}}</p>
                </div>
                {{/if}}
            </form>
            {{/with}}
        </div>
        
    </div>
</div>