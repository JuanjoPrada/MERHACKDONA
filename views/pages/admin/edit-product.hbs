<div class="container">

    <div class="row">
        <div class="col">
            <h1 style="font-weight: 100">Editar {{name}}</h1>

            <form action="/admin/edit-product/{{id}}" method="POST">
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input name="name" type="text" class="form-control" id="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="description">Descripci칩n</label>
                    <textarea name="description" type="text" class="form-control" id="description"
                        value="{{description}}">{{description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="type">Tipo</label>
                    <input name="type" type="text" class="form-control" id="type" value="{{type}}">
                </div>
                <div class="form-group">
                    <label for="image">Imagen</label> {{!-- TODO: ver c칩mo subir im치genes sin url --}}
                    <input name="image" type="text" class="form-control" id="image" value="{{image}}">
                </div>
                <div class="form-group">
                    <label for="price">Precio</label>
                    <input name="price" type="number" class="form-control" id="price" value="{{price}}">
                </div>
                <div class="form-group">
                    <label for="stock">Stock</label>
                    <input name="stock" type="number" class="form-control" id="stock" value="{{stock}}">
                </div>

                <br>
                <button type="submit" class="btn btn-dark">Guardar edici칩n del producto</button>
                <a href="/admin/products-list" class="btn btn-dark">Volver</a>
                {{#if errorMessage}}
                <div id="error">
                    <p>{{{errorMessage}}}</p>
                </div>
                {{/if}}
                <br><br><br>

            </form>
            <form action="/admin/delete-product/{{id}}" method="POST" class="deleteForm">
                <button class="btn btn-outline-danger">Borrar este producto</button>
            </form>
        </div>

    </div>
</div>